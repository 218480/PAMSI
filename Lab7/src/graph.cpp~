#include "../inc/graph.h"
void graph::enlarge()
{
  int i,j;
  bool **temp=new bool*[rozmiar+1];
  for(i=0;i<=rozmiar;i++)
      temp[i]=new bool[rozmiar+1];
  for(i=0;i<rozmiar;i++){
	for(j=0;j<rozmiar;j++)
            temp[i][j]=macierz[i][j];
        }
      rozmiar++;
      for(i=0;i<=rozmiar;i++)
	{
	  temp[i][rozmiar]=0;
	  temp[rozmiar][i]=0;
	}
      for(i=0;i<rozmiar;i++)
	delete [] macierz[i];
      delete [] macierz;
      macierz=temp;
}

void graph::add_vertex()
{
  if(rozmiar==0){
    macierz=new bool*[1];
    macierz[0]=new bool[1];
    rozmiar++;
    macierz[0][0]=0;
  }
  else
    enlarge();
}

void graph::add_edge(int x, int y)
{
  if(x<=rozmiar && y<=rozmiar)
    {
        macierz[x][y]=1;
	macierz[y][x]=1;
    }
  else 
    throw "out of range target for new edge!";
}

int* graph::get_neighbors(int x)
{
  int *temp;
  int ilosc=0,i,j=0;
  if(x<rozmiar){
  for(i=0;i<rozmiar;i++)
    if(macierz[x][i]) ilosc++;
  temp=new int[ilosc];
  for(i=0;i<rozmiar;i++)
    if(macierz[x][i]) temp[j++]=i;
  return temp;}
  else {throw "out of range target for get neighbors!"; return 0;}
}

bool graph::is_connected(int x, int y)
{
  if(x<=rozmiar && y<=rozmiar)
    {
      return macierz[x][y];
    }
  else 
    throw "out of range target for connection check";
  return 0;
}

